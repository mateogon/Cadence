# AudioBookForge runtime parameters

# Number of parallel synthesis workers.
# Current code default: 1 (auto/adaptive mode disabled unless this is set).
AUDIOBOOKFORGE_SYNTH_WORKERS=1

# Max characters per TTS chunk before splitting.
# 1600 is safer; very large values can trigger ONNX shape/runtime errors.
AUDIOBOOKFORGE_TTS_MAX_CHARS=800

# Force CPU provider for debugging/benchmarking (1 = force CPU, 0 = allow GPU providers).
AUDIOBOOKFORGE_FORCE_CPU=0

# Try TensorRT provider first (requires TensorRT runtime DLLs, e.g. nvinfer_10.dll).
# Keep 0 unless TensorRT is installed and configured.
AUDIOBOOKFORGE_USE_TENSORRT=0

# Use only CUDAExecutionProvider (no CPU fallback). Can improve performance/warnings,
# but may fail if some ops are unsupported on CUDA.
AUDIOBOOKFORGE_CUDA_ONLY=1

# Reduce ONNX Runtime warning noise in logs (1 = hide warnings, show errors only).
AUDIOBOOKFORGE_SUPPRESS_ORT_WARNINGS=1

# Add system CUDA Toolkit DLL path to process (1=yes, 0=no).
# Keep 0 to avoid PyTorch/cuDNN DLL conflicts on Windows.
AUDIOBOOKFORGE_ADD_SYSTEM_CUDA_DLL_PATH=0

# Optional external Python executable for WhisperX alignment (recommended: separate venv).
# Example: C:\Users\mateo\Desktop\AudioBookForge\venv_whisperx\Scripts\python.exe
AUDIOBOOKFORGE_WHISPERX_PYTHON=

# WhisperX runtime config
AUDIOBOOKFORGE_WHISPERX_DEVICE=auto
AUDIOBOOKFORGE_WHISPERX_MODEL=base
AUDIOBOOKFORGE_WHISPERX_BATCH_SIZE=16
AUDIOBOOKFORGE_WHISPERX_COMPUTE_TYPE=float16
